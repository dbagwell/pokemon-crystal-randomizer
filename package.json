{
  "name": "pokemon-crystal-randomizer",
  "productName": "Pokémon Crystal Randomizer",
  "version": "0.0.0",
  "description": "Generate and apply patches for Pokémon Crystal Version",
  "author": "David Bagwell",
  "license": "MIT",
  "main": ".vite/build/main.js",
  "scripts": {
    "gen:styles:light": "smui-theme compile src/renderer/css/smui.css -i src/sass/light",
    "gen:styles:dark": "smui-theme compile src/renderer/css/smui-dark.css -i src/sass/dark",
    "gen:styles:global": "sass src/sass/global.scss src/renderer/css/global.css",
    "gen:styles": "npm run gen:styles:light && npm run gen:styles:dark && npm run gen:styles:global",
    "gen:grammars": "nearleyc src/nearley/data.ne -o src/main/lib/grammars/dataGrammar.cjs",
    "gen": "npm run gen:styles",
    "lint": "eslint --fix .",
    "dev": "electron-forge start",
    "package": "electron-forge package --platform darwin,linux,win32 --arch ia32,x64,armv7l,arm64,universal && electron-forge make --skip-package --platform darwin --arch x64,arm64,universal && electron-forge make --skip-package --platform linux --arch x64,armv7l,arm64 && electron-forge make --skip-package --platform win32 --arch ia32,x64,arm64"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.1.0",
    "@electron-forge/maker-deb": "^7.1.0",
    "@electron-forge/maker-rpm": "^7.1.0",
    "@electron-forge/maker-squirrel": "^7.1.0",
    "@electron-forge/maker-zip": "^7.1.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.1.0",
    "@electron-forge/plugin-vite": "^7.1.0",
    "@html-eslint/eslint-plugin": "^0.21.0",
    "@html-eslint/parser": "^0.21.0",
    "@material/dom": "^14.0.0",
    "@smui/button": "^7.0.0-beta.15",
    "@smui/circular-progress": "^7.0.0-beta.15",
    "@smui/common": "^7.0.0-beta.15",
    "@smui/dialog": "^7.0.0-beta.15",
    "@smui/paper": "^7.0.0-beta.15",
    "@smui/textfield": "^7.0.0-beta.15",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tsconfig/svelte": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "electron": "27.1.2",
    "electron-affinity": "^1.2.4",
    "eslint": "^8.54.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-svelte": "^2.35.1",
    "nearley": "^2.20.1",
    "sass": "^1.69.5",
    "smui-theme": "^7.0.0-beta.15",
    "svelte": "^4.2.7",
    "vite-tsconfig-paths": "^4.2.1",
    "yaml": "^2.3.4"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  }
}