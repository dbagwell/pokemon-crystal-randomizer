{
  "name": "pokemon-crystal-randomizer",
  "productName": "Pokemon Crystal Randomizer",
  "version": "0.0.0",
  "description": "Generate and apply patches for Pok√©mon Crystal Version",
  "author": "David Bagwell",
  "license": "MIT",
  "main": ".vite/build/main.js",
  "scripts": {
    "gen:styles": "sass src/sass/global.scss src/renderer/css/global.css",
    "gen:grammars": "nearleyc src/nearley/data.ne -o src/main/lib/grammars/dataGrammar.mjs",
    "gen:data": "set -a; source .tools.env; set +a; vite-node -c vite.tools.config.ts tools/generateAllData.ts",
    "lint": "eslint --fix .",
    "dev": "electron-forge start",
    "build": "electron-forge package --platform darwin --arch arm64; rm -rf out",
    "package:mac": "npm run build && electron-builder build --mac dmg --x64 --arm64 --universal",
    "package:linux": "npm run build && electron-builder build --linux appimage --x64 --armv7l --arm64",
    "package:win": "npm run build && electron-builder build --win msi --ia32 --x64 --arm64"
  },
  "devDependencies": {
    "@electron-forge/cli": "7.1.0",
    "@electron-forge/maker-deb": "7.1.0",
    "@electron-forge/maker-rpm": "7.1.0",
    "@electron-forge/maker-squirrel": "7.1.0",
    "@electron-forge/maker-zip": "7.1.0",
    "@electron-forge/plugin-auto-unpack-natives": "7.1.0",
    "@electron-forge/plugin-vite": "7.1.0",
    "@floating-ui/dom": "^1.6.3",
    "@html-eslint/eslint-plugin": "^0.21.0",
    "@html-eslint/parser": "^0.21.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tsconfig/svelte": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "electron": "27.1.2",
    "electron-affinity": "^1.2.4",
    "electron-builder": "^26.0.12",
    "eslint": "^8.54.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-svelte": "^2.46.0",
    "lz-string": "^1.5.0",
    "material-icons": "^1.13.12",
    "nearley": "^2.20.1",
    "object-hash": "^3.0.0",
    "sass": "^1.69.5",
    "seedrandom": "^3.0.5",
    "source-map-support": "^0.5.21",
    "svelte": "^5.25.9",
    "vite-node": "^1.6.0",
    "vite-tsconfig-paths": "^4.2.1",
    "yaml": "^2.3.4"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  }
}
